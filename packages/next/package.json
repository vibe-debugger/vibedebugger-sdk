{
    "name": "@vibedebugger/next",
    "version": "0.1.0",
    "description": "Vibe Debugger SDK for Next.js applications",
    "main": "./dist/index.js",
    "module": "./dist/index.mjs",
    "types": "./dist/index.d.ts",
    "exports": {
        ".": {
            "require": "./dist/index.js",
            "import": "./dist/index.mjs",
            "types": "./dist/index.d.ts"
        }
    },
    "files": [
        "dist"
    ],
    "scripts": {
        "build": "tsup src/index.ts --format cjs,esm --dts --external @vibedebugger/core --external @vibedebugger/node --external next",
        "dev": "tsup src/index.ts --format cjs,esm --dts --watch --external @vibedebugger/core --external @vibedebugger/node --external next",
        "test": "vitest run"
    },
    "keywords": [
        "error-tracking",
        "monitoring",
        "nextjs",
        "react"
    ],
    "author": "Your Name",
    "license": "MIT",
    "publishConfig": {
        "access": "public"
    },
    "dependencies": {
        "@vibedebugger/core": "workspace:*",
        "@vibedebugger/node": "workspace:*"
    },
    "devDependencies": {
        "@types/node": "^20.11.5",
        "tsup": "^8.0.1",
        "typescript": "^5.3.3",
        "vitest": "^1.2.0"
    },
    "peerDependencies": {
        "next": ">=13.0.0"
    }
}